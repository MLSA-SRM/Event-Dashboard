    <style media="screen">
      body {
        margin-top: 5vw;
        background: linear-gradient(270deg, #e3e4f3, #d0d0fa);
        background-size: 400% 400%;
        -webkit-animation: AnimationName 27s ease infinite;
        -moz-animation: AnimationName 27s ease infinite;
        animation: AnimationName 27s ease infinite;
      }

      /* Background colour will become primary colour */
      .header {
        background: #ecf4f3;
        -webkit-box-shadow: 0px 7px 24px 0px rgba(0, 0, 0, 0.46);
        -moz-box-shadow: 0px 7px 24px 0px rgba(0, 0, 0, 0.46);
        box-shadow: 0px 7px 24px 0px rgba(0, 0, 0, 0.46);
        border: solid 1px #fff;
        border-radius: 5vw;
        max-width: 90vw;
        padding: 2vw;
        margin: 0 auto;
      }

      .header h1 {
        color: #4e89ae;
        font-size: 6vw;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        letter-spacing: -0.4vw;
        text-align: center;
        font-weight: 500;
        margin-bottom: -3vw;
      }

      /* This colour will also become secondary colour */

      .header h3 {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        font-weight: 300;
        font-size: 3vw;
      }
      .header h2 {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        font-weight: 400;
        text-align: center;
      }
      .header p {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        font-size: 3vw;
      }
      hr {
        opacity: 30%;
      }
    </style>
  </head>
  <body>
    <div class="header" style="background: <%= primary %>">
      <h1 style="color: <%- tertiary %>"><%= company %></h1>
      <h2 style="color: <%- secondary %>; font-size: 5vw"><%= title %></h2>
      <hr />
      <br />
      <p><%= hey %> <span id="name"><%= name %> </span></p>
      <h3 class="text"><%= body %></h3>
      <% if (qr) { %>
        <img src="<%- img %>" alt="qrcode">      
      <% } %>
    </div>
  </body>
</html>
